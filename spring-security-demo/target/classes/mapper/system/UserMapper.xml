<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.securitydemo.mapper.system.UserMapper">
    <insert id="saveUser">
        insert into sys_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">username,</if>
            <if test="nickname != null">nickname,</if>
            <if test="password != null">password,</if>
            <if test="phone != null">phone,</if>
            <if test="open_id != null">open_id,</if>
            <if test="firstFlag != null">first_flag,</if>
            <if test="email != null">email,</if>
            <if test="flag != null">flag,</if>
            <if test="remarks != null">remarks,</if>
            <if test="type != null">type,</if>
            <if test="gender != null">gender,</if>
            <if test="birthday != null">birthday,</if>
            <if test="address != null">address,</if>
            create_time,
            update_time,
        </trim>
            values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">#{username},</if>
            <if test="nickname != null">#{nickname},</if>
            <if test="password != null">#{password},</if>
            <if test="phone != null">#{phone},</if>
            <if test="open_id != null">#{open_id},</if>
            <if test="firstFlag != null">#{firstFlag},</if>
            <if test="email != null">#{email},</if>
            <if test="flag != null">#{flag},</if>
            <if test="remarks != null">#{remarks},</if>
            <if test="type != null">#{type},</if>
            <if test="gender != null">#{gender},</if>
            <if test="birthday != null">#{birthday},</if>
            <if test="address != null">#{address},</if>
            current_timestamp,
            current_timestamp,
        </trim>
    </insert>
    <update id="updateUser">
        update sys_user
        <set>
            <if test="username != null">username=#{username},</if>
            <if test="nickname != null">nickname=#{nickname},</if>
            <if test="password != null">password=#{password},</if>
            <if test="phone != null">phone=#{phone},</if>
            <if test="firstFlag != null">first_flag=#{firstFlag},</if>
            <if test="email != null">email=#{email},</if>
            <if test="flag != null">flag=#{flag},</if>
            <if test="remarks != null">remarks=#{remarks},</if>
            <if test="gender != null">gender=#{gender},</if>
            <if test="birthday != null">birthday=#{birthday},</if>
            <if test="address != null">address=#{address}</if>
            create_time=current_timestamp
        </set>
        <where>
            <if test="id != null">and id=#{id}</if>
            <if test="username != null">and username=#{username}</if>
            <if test="phone != null">and  phone=#{phone}</if>
            <if test="email != null">and email=#{email}</if>
            <if test="open_id != null">and open_id=#{open_id}</if>
        </where>
    </update>
    <select id="findUser" parameterType="com.example.securitydemo.bean.dto.system.SysUserDto" resultType="com.example.securitydemo.bean.vo.system.SysUser">
        select id,username,
               password,nickname,
               phone,open_id,
               first_flag,
               flag,create_time,
               email,
               remarks,
               type,
               gender,
               birthday,
               address,
               update_time from sys_user
        <where>
            flag=0
            <if test="id != null"> and id=#{id}</if>
            <if test="username != null"> and username=#{username}</if>
            <if test="phone != null"> and phone=#{phone}</if>
            <if test="openId != null "> and open_id=#{openId}</if>
            <if test="email != null"> and email=#{email}</if>
            <if test="type != null"> and type=#{type}</if>

        </where>
    </select>
    <select id="findRole" resultType="com.example.securitydemo.bean.vo.system.SysUserRole">
        select username,role_id from sys_user_role
        <where>
            <if test="username != null">
                username=#{username}
            </if>
        </where>
    </select>
</mapper>