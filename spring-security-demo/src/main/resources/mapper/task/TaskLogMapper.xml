<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.securitydemo.mapper.task.TaskLogMapper">
    <insert id="insert">
        insert into task_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="serverName != null">server_name,</if>
            <if test="status != null">status,</if>
            <if test="executionTime != null">execution_time,</if>
            create_time,
            <if test="remarks != null">remarks,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="serverName != null">#{serverName},</if>
            <if test="status != null">#{status},</if>
            <if test="executionTime != null">#{executionTime},</if>
            current_timestamp,
            <if test="remarks != null">#{remarks},</if>
        </trim>
    </insert>
    <update id="update">
        update task_log
        <set>
            <if test="taskId != null">task_id=#{taskId},</if>
            <if test="serverName != null">server_name=#{serverName},</if>
            <if test="status != null">status=#{status},</if>
            <if test="executionTime != null">execution_time=#{executionTime},</if>
            <if test="remarks != null"> remarks=#{remarks},</if>
        </set>
        <where>
            <if test="id != null">and id=#{id}</if>
            <if test="taskId != null">and task_id=#{taskId}</if>
        </where>
    </update>
    <delete id="delete">
        delete from task_log
        <where>
            <if test="id != null">and id=#{id}</if>
            <if test="taskId != null">and task_id=#{taskId}</if>
        </where>
    </delete>

    <select id="query" resultType="com.example.securitydemo.bean.vo.task.TaskLog">
        select id,task_id,server_name,status,execution_time,create_time,remarks
        from task_log
        <where>
            <if test="id != null">and id=#{id}</if>
            <if test="taskId != null">and task_id=#{taskId}</if>
            <if test="serverName != null">and server_name=#{serverName}</if>
            <if test="status != null">and status=#{status}</if>
            <if test="executionTime != null">and execution_time=#{executionTime}</if>
            <if test="createTime != null">and create_time=#{createTime}</if>
            <if test="remarks != null">and remarks=#{remarks}</if>
        </where>
    </select>

</mapper>