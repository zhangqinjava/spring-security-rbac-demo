<mapper namespace="com.example.securitydemo.mapper.task.TaskConfigMapper">
    <insert id="add">
        insert into task_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="taskId != null">task_id,</if>
            <if test="expression != null">expression,</if>
            <if test="status != null">status,</if>
            <if test="concurrent != null">concurrent,</if>
            <if test="retryCount != null">retry_count,</if>
            <if test="retryInterval != null">retry_interval,</if>
            <if test="lastRunTime != null">last_run_time,</if>
            <if test="nextRunTime != null">next_run_time,</if>
            <if test="creater != null">creater,</if>
            <if test="updater != null">updater,</if>
            update_time,
            create_time,
            <if test="remarks != null">remarks,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="code != null">#{code},</if>
            <if test="name != null">#{name},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="expression != null">#{expression},</if>
            <if test="status != null">#{status},</if>
            <if test="concurrent != null">#{concurrent},</if>
            <if test="retryCount != null">#{retryCount},</if>
            <if test="retryInterval != null">#{retryInterval},</if>
            <if test="lastRunTime != null">#{lastRunTime},</if>
            <if test="nextRunTime != null">#{nextRunTime},</if>
            <if test="creater != null">#{creater},</if>
            <if test="updater != null">#{updater},</if>
            current_timestamp,
            current_timestamp,
            <if test="remarks != null">#{remarks},</if>
        </trim>
    </insert>
    <update id="update">
        update task_config
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="code != null">code=#{code},</if>
            <if test="taskId != null">task_id=#{taskId},</if>
            <if test="expression != null">expression=#{expression},</if>
            <if test="status != null">status=#{status},</if>
            <if test="concurrent != null">concurrent=#{concurrent},</if>
            <if test="retryCount != null">retry_count=#{retryCount},</if>
            <if test="retryInterval != null">retry_interval=#{retryInterval},</if>
