    <select id="query" resultType="com.example.securitydemo.bean.vo.task.TaskConfigVo">
        select id,code,name,task_id,expression,status,concurrent,retry_count,retry_interval,last_run_time,next_run_time,creater,updater,
               update_time,create_time,remarks from task_config
                <where>
                    <if test="id != null">and id=#{id}</if>
                    <if test="code != null">and code=#{code}</if>
                    <if test="name != null">and name=#{name}</if>
                    <if test="taskId != null">and task_id=#{taskId}</if>
                    <if test="status != null">and status=#{status}</if>
        </where>
    </select>
</mapper>