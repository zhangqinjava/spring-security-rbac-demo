<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.securitydemo.mapper.system.MenuMapper">
    <sql id="where_sql">
        <where>
            <if test="id != null">and id=#{id} </if>
            <if test="parentId != null">and parent_id=#{parentId} </if>
            <if test="name != null">and name=#{name} </if>
            <if test="icon != null">and icon=#{icon} </if>
            <if test="type != null">and type=#{type} </if>
            <if test="status != null">and status=#{status} </if>
            <if test="chineseName != null">and chinese_name=#{chineseName} </if>
            <if test="englishName != null">and english_name=#{englishName} </if>
            <if test="sort != null">and sort=#{sort} </if>
            <if test="updateTime != null">and update_time=#{updateTime} </if>
            <if test="createTime != null">and create_time=#{createTime} </if>
        </where>
    </sql>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into sys_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="parentId != null"> parent_id,</if>
            <if test="name != null"> name, </if>
            <if test="url != null"> url, </if>
            <if test="icon != null"> icon, </if>
            <if test="type != null"> type, </if>
            <if test="status != null">status,</if>
            <if test="chineseName != null">chinese_name, </if>
            <if test="englishName != null">english_name, </if>
            <if test="sort != null">sort, </if>
            update_time, create_time
        </trim>
             values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="parentId != null">#{parentId}, </if>
            <if test="name != null">#{name}, </if>
            <if test="url != null">#{url}, </if>
            <if test="icon != null">#{icon}, </if>
            <if test="type != null">#{type}, </if>
            <if test="status != null">#{status}, </if>
            <if test="chineseName != null">#{chineseName}, </if>
            <if test="englishName != null">#{englishName}, </if>
            <if test="sort != null">#{sort}, </if>
            current_timestamp,current_timestamp
        </trim>
    </insert>
    <update id="update">
        update sys_menu
        <set>
            <if test="parentId != null">parent_id=#{parentId},</if>
            <if test="name != null">name=#{name},</if>
            <if test="url != null">url=#{url},</if>
            <if test="icon != null">icon=#{icon},</if>
            <if test="type != null">type=#{type},</if>
            <if test="status != null">status=#{status},</if>
            <if test="chineseName != null">chinese_name=#{chineseName},</if>
            <if test="englishName != null">english_name=#{englishName},</if>
            <if test="sort != null">sort=#{sort},</if>
            update_time=current_timestamp
        </set>
        <where>
            <if test="id != null">and id=#{id}</if>
        </where>
    </update>
    <delete id="delete">
        delete from sys_menu
        <where>
            <if test="id != null">and id=#{id}</if>
        </where>
    </delete>

    <select id="query" resultType="com.example.securitydemo.bean.vo.system.SysMenu">
        select id,parent_id,name,url,icon,type,status,chinese_name,english_name,sort,update_time,create_time from sys_menu
        <include refid="where_sql"/>
    </select>
    <select id="getChildren" resultType="com.example.securitydemo.bean.vo.system.SysMenu">
        WITH RECURSIVE menu_tree AS (
            SELECT id, parent_id, name
            FROM sys_menu
            WHERE id = #{id}

            UNION ALL

            SELECT m.id, m.parent_id, m.name
            FROM sys_menu m
                     INNER JOIN menu_tree mt ON m.parent_id = mt.id
        )
        SELECT * FROM menu_tree;
    </select>
</mapper>